generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageUrl  String?
  gallery   String[] // Array: Bisa simpan banyak link foto
  layout    String   @default("standard") // Pilihan: "standard", "gallery", "split"
  author    String
  createdAt DateTime @default(now())
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique // Email tidak boleh kembar
  password  String   // Password (nanti kita enkripsi)
  name      String?  // Nama Aslab
  role      String   @default("aslab") // Bisa 'admin' atau 'aslab'
}